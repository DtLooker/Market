<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义toolbar-->
    <declare-styleable name="MToolbar">
        <attr name="rightButtonIcon" format="reference"/>
        <attr name="isShowSearchView" format="boolean"/>
    </declare-styleable>

    <!--自定义indicator-->
    <declare-styleable name="MyIndicator">
        <attr name="indicator_num" format="integer"/>
        <attr name="indicator_radius" format="integer"/>
        <attr name="forePaint_color" format="integer"/>
        <attr name="backPaint_color" format="integer"/>
    </declare-styleable>

    <!--自定义增减器-->
    <declare-styleable name="NumAddSubView">
        <attr name="value" format="integer|reference"/>
        <attr name="minValue" format="integer|reference"/>
        <attr name="maxValue" format="integer|reference"/>
        <attr name="textView_bg" format="reference"/>
        <attr name="addBtn_bg" format="reference"/>
        <attr name="subBtn_bg" format="reference"/>
    </declare-styleable>

</resources>